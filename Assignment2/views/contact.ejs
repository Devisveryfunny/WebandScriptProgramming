<%- include('partials/header', { title: 'Contact Me' }) %>
<%- include('partials/main_nav', { title: 'Contact Me' }) %>

<div class="container">
    <h1>Contact Me</h1>

    <!-- Feedback Form -->
    <form class="centered-form" action="mailto:dev.parmar@ontariotechu.ca" method="post" enctype="text/plain" name="form">
        <p>
            <label for="name">Name :</label>
            <input type="text" required name="name" size="32" placeholder="Enter your complete name">
        </p>

        <p>
            <label for="email">Email :</label>
            <input type="email" required name="email" size="32" placeholder="Enter your email">
        </p>

        <p>
            <label for="comment">Comment</label>
            <br><br>
            <textarea name="comment" cols="40" rows="8"></textarea>
        </p>

        <p>
            <input type="checkbox" name="maillist">
            <label for="maillist">Put me on mail list</label>
        </p>

        <p>
            <label for="where">How did you find us?</label>
            <select name="where">
                <option value="Search Engine">Search Engine</option>
                <option value="Social Media">Social Media</option>
                <option value="Words of Mouth">Reference</option>
                <option value="other">Other</option>
            </select>
        </p>

        <p>
            <label for="countries">Where do you live?</label>
            <input list="countries">
            <datalist id="countries">
                <option value="Afghanistan">
                <option value="Albania">
                <option value="Algeria">
                <option value="Andorra">
                <option value="Angola">
                <option value="Antigua and Barbuda">
                <option value="Argentina">
                <option value="Armenia">
                <option value="Aruba">
                <option value="Australia">
                <option value="Austria">
                <option value="Azerbaijan">
            </datalist>
        </p>

        <p>
            <input type="submit" value="Click to submit"/>
        </p>

        <p>
            <input type="reset" value="Click to reset"/>
        </p>
    </form>
</div>

<%- include('partials/footer') %>
<%- include('partials/bottom_nav') %>
