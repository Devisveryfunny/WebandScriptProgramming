<%- include('partials/header', { title: 'Error' }) %>
<%- include('partials/main_nav') %>

<div class="container text-center mt-5">
    <h1><%= message || "Oops! Something went wrong" %></h1>
    <h2><%= error.status || "404" %></h2>
    <p class="lead">It seems like the page you're looking for doesn't exist.</p>
    <p><a href="/" class="btn btn-primary mt-3">Go Back to Home</a></p>
    
    <% if (error && error.stack && process.env.NODE_ENV === 'development') { %>
        <pre class="text-muted mt-4"><%= error.stack %></pre>
    <% } %>
</div>

<%- include('partials/footer') %>
<%- include('partials/bottom_nav') %>


